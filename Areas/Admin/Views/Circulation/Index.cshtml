@using RentQuest.Models;
@model IEnumerable<Circulations>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Property List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Add New Property</a>
    </div>
</div>

<form method="post">
    <div class="row">
        <div class="col-3">
            <input type="number" class="form-control" name="lowamount" />
        </div>
        <div class="col-3">
            <input type="number" class="form-control" name="highamount" />
        </div>
        <div class="col-3">
            <input type="submit" class="form-control btn btn-success" value="Search" />
        </div>
        <div class="col-3">

        </div>
    </div>
</form>

<br />
<div>
    <table class="table table-striped border" id="myTable">
        <thead>
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(c => c.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Monthly_Rent)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.isAvailable)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.CircTypes.CircType)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Cdetails)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Flat_No)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.House_No)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.SizeSQFT)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.num_bath)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.num_bed)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Monthly_Rent</td>
                    <td>@item.Location</td>
                    <td>@item.isAvailable</td>
                    <td>@item.CircTypes.CircType</td>
                    <td>@item.Cdetails</td>
                    <td>@item.Flat_No</td>
                    <td>@item.House_No</td>
                    <td>@item.SizeSQFT</td>
                    <td>@item.num_bath</td>
                    <td>@item.num_bed</td>
                    <td>
                        <partial name="_Button1PartialView" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>


    </table>
</div>

