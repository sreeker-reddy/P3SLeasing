@model RentQuest.Models.Circulations
@{
    ViewData["Title"] = "Create";
}
<br />

<h2 class="text-info">Add New Property</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <h3>@ViewBag.message</h3>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Monthly_Rent"></label>
            </div>
            <div class="col-5">
                <input asp-for="Monthly_Rent" class="form-control" />
            </div>
            <span asp-validation-for="Monthly_Rent" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-5">
                <input asp-for="Image" class="form-control" type="file" />
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Location"></label>
            </div>
            <div class="col-5">
                <input asp-for="Location" class="form-control" />
            </div>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Cdetails"></label>
            </div>
            <div class="col-5">
                <input asp-for="Cdetails" class="form-control" />
            </div>
            <span asp-validation-for="Cdetails" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Flat_No"></label>
            </div>
            <div class="col-5">
                <input asp-for="Flat_No" class="form-control" />
            </div>
            <span asp-validation-for="Flat_No" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="House_No"></label>
            </div>
            <div class="col-5">
                <input asp-for="House_No" class="form-control" />
            </div>
            <span asp-validation-for="House_No" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SizeSQFT"></label>
            </div>
            <div class="col-5">
                <input asp-for="SizeSQFT" class="form-control" />
            </div>
            <span asp-validation-for="SizeSQFT" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="num_bath"></label>
            </div>
            <div class="col-5">
                <input asp-for="num_bath" class="form-control" />
            </div>
            <span asp-validation-for="num_bath" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="num_bed"></label>
            </div>
            <div class="col-5">
                <input asp-for="num_bed" class="form-control" />
            </div>
            <span asp-validation-for="num_bed" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CircTypeId"></label>
            </div>
            <div class="col-5">
                <select asp-for="CircTypeId" asp-items="ViewBag.CircTypeId" class="form-control"></select>
                @*<input asp-for="CircTypeId" class="form-control" />*@
            </div>
            <span asp-validation-for="CircTypeId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="isAvailable"></label>
            </div>
            <div class="col-5">
                <input asp-for="isAvailable" class="" type="checkbox" />
            </div>
            <span asp-validation-for="isAvailable" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
